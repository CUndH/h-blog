<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>H-Blog</title>

  <link rel="stylesheet" href="css/reset.css">
  <link rel="stylesheet" href="css/reveal.css">
  <link rel="stylesheet" href="css/theme/black.css" id="theme">

  <!-- Theme used for syntax highlighting of code -->
  <link rel="stylesheet" href="js/highlight/monokai.css" id="highlight-theme">
</head>
<body>
  <div class="reveal">
    <div class="slides">
      <section data-markdown data-separator="---">
        <textarea type="text/template">
            ## Demo 1
            Slide 1
            ---
            ## Demo 1
            Slide 2
            ---
            ## Demo 1
            Slide 3
        </textarea>
      </section>
    </div>
  </div>

  <script src="js/reveal.js"></script>
  <script src="js/zoom/zoom.js"></script>
  <script src="js/notes/notes.js"></script>
  <script src="js/search/search.js"></script>
  <script src="js/markdown/markdown.js"></script>
  <script src="js/highlight/highlight.js"></script>

  <script>
    Reveal.initialize({
      controls: true,
      progress: true,
      center: true,
      hash: true,
      controlsTutorial: true,
      fragments: true,
      plugins: [ RevealZoom, RevealNotes, RevealSearch, RevealMarkdown, RevealHighlight ]
    });
  </script>
</body>
</html>